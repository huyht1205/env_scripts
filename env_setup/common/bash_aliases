#!/bin/bash

complete -cf sudo
complete -cf which

export VISUAL=vim
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias ls='ls -h --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias df='df -Th'
alias mkdir='mkdir -p -m 775'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias df='df -Th'
alias cdgit='cd /data/git_repo'
alias cdwork='cd /data/workspace'

function CloneMyRepo
{
	DIR=${2}
	git clone https://github.com/huyht1205/${1} ${DIR}
}

function addAlias
{
	vim ~/.bash_aliases ; source ~/.bash_aliases
	updateGit
}

function addAliasPrivate
{
	vim ~/.bash_aliases_$(uname) ; source ~/.bash_aliases_$(uname)
	updateGit
}

function updateGit
{
	CURRENT_PATH=$(pwd)
	cdgit
	cd scripts
	git add -A
	git commit --amend
	cd ${CURRENT_PATH}
}

function DoCrossConf
{
	CROSS_COMPILER_PATH=/data/workspace/tools/gcc-linaro-4.9-2016.02-x86_64_arm-linux-gnueabihf/bin
	export ARCH=arm
	export CROSS_COMPILE=${CROSS_COMPILER_PATH}/arm-linux-gnueabihf-
}

source ~/.bash_aliases_$(uname)

