#!/bin/bash
export PS1='\[\033[35;1m\]\w\[\033[0m\]\$ '

MAC_IP=192.168.56.1
alias ConnectSerial='picocom -b 115200 /dev/ttyUSB0'
alias MountMac='sshfs hoangtrunghuy@${MAC_IP}:/data/workspace /data/workspace/'
alias cdlinuxWorkspace='cd /data/linux-workspace'
alias cdyocto='cd /data/yocto'

export LD_LIBRARY_PATH=/usr/lib64

source /usr/share/bash-completion/completions/git

function DoShare
{
	mount.vboxsf vboxsf /data/workspace/
}

function GitLocalConfig
{
	git config user.email "luck.hoang@styl.solutions"
	git config user.name "Luck Hoang"
}
