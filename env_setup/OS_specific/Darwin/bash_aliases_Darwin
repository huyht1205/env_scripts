#!/bin/bash
export PS1='\[\033[37;1m\]\w\[\033[0m\]\$ '

#USB_SERIAL=/dev/tty.usbserial-AL01FJMD
USB_SERIAL=/dev/tty.SLAB_USBtoUART

alias ConnectBoard='ssh root@192.168.100.4'
alias Serial='picocom -b 115200 $USB_SERIAL'
alias sshRefresh='rm ~/.ssh/known_host*'

alias GotoLaptop='ssh root@lh-asuspc.local'
alias MountLaptop='sshfs root@lh-asuspc.local:/data/workspace /data/workspace/SFTP/ASUS-PC'
alias GotoVM='ssh root@vm.local'
alias MountVM='sshfs root@vm.local:/data/workspace /data/workspace/SFTP/VM'

export PATH="/usr/local/bin:$PATH"
echo ---Finished path edit---

function sshUpdate
{
	echo $1 > ~/.LINUX_IP
}

source ~/.git-completion.bash

if [ -f /usr/local/etc/bash_completion ]; then  
. /usr/local/etc/bash_completion
fi  
